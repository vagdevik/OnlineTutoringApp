<%- include('partials/header') %>


    <div class="container">

      <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
          <h1 class="display-5 fw-bold">Vidzy Application</h1>
          <p class="col-md-8 fs-4">Selected list of most popular videos</p>
          <a href="/videos/new" class="btn btn-primary btn-lg" type="button">Add video</a>
        </div>
      </div>

      <div class="row">

        <% videos.forEach(function(video){ %>

        <div class="card" style="width: 18rem;">
          <img src="images/<%= video.img %>" class="thumbnail" alt="..." style="width:200px; height:200px">
          <div class="card-body">
            <h5 class="card-title"><%= video.title %></h5>
            <p class="card-text"><%= video.description %></p>
            <a href="/videos/<%= video._id %>" class="btn btn-primary">Show details</a>
          </div>
        </div>

        <% }); %>


      </div>

    
   <%- include('partials/footer') %>
  
  </div>




